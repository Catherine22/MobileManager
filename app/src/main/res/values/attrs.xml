<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Refer to android-sdk-macosx/platforms/android-23/data/res/values/attrs.xml-->
    <declare-styleable name="TextView">
        <attr name="title_" format="string" />
        <attr name="desc_on" format="string" />
        <attr name="desc_off" format="string" />
    </declare-styleable>

    <declare-styleable name="Banner">
        <attr name="show_background" format="boolean" />
        <attr name="show_dots" format="boolean" />
        <attr name="dots_src_on" format="integer" />
        <attr name="dots_src_off" format="integer" />
    </declare-styleable>

    <declare-styleable name="ProgressBar">
        <!-- Restricts to ONLY indeterminate mode (state-keeping progress mode will not work). -->
        <attr name="indeterminateOnly" format="boolean" />
        <!-- Drawable used for the progress mode. -->
        <attr name="progressDrawable" format="reference" />
        <!-- Drawable used for the indeterminate mode. -->
        <attr name="indeterminateDrawable" format="reference" />
        <attr name="minHeight" format="dimension" />
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>
</resources>