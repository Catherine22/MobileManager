<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPrimary"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            style="@style/text_item_left_style"
            android:text="安全号码" />

        <TextView
            android:id="@+id/tv_phone_number"
            style="@style/text_item_right_style"
            android:text="" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            style="@style/text_item_left_style"
            android:layout_centerVertical="true"
            android:text="防盗保护是否开启" />

        <ImageView
            android:id="@+id/tv_anti"
            style="@style/text_item_right_style"
            android:layout_centerVertical="true"
            android:src="@drawable/lock" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button">

        <TextView
            android:id="@+id/tv_setup"
            style="@style/text_item_left_style"
            android:layout_centerVertical="true"
            android:text="重新进入设置导向" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/darker_gray">

        <TextView
            style="@style/text_item_left_style"
            android:layout_centerVertical="true"
            android:text="功能简介" />
    </RelativeLayout>


    <TextView
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:text="GPS追踪:#*location*#" />

    <TextView
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:text="播放报警音乐：#*alarm*#" />

    <TextView
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:text="远程数据销毁:#*wipedata*#" />

    <TextView
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:text="远程锁屏:#*lockscreen*#" />
</LinearLayout>